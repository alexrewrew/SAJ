.border-yellow
  border-bottom 1px solid $yellow
  margin-bottom 26px

.weather-row
  margin-bottom 43px

.weather
  position absolute
  bottom 0
  right 15px

.news-container
  height 466px
  margin-bottom 30px
  margin-left 0
  margin-right 0
  +mobile()
    height auto
  .service-container--image
    max-height 280px
    height 280px
    display flex
    justify-content center
    align-items center
    +mobile()
      height auto
    img
      height 100%
      width auto
  .service-container--description
    height auto
    padding: 27px 29px 0;
    h3
      border-bottom 1px solid #dbdbdb
      padding-bottom 23px
      margin-bottom 16px
      line-height: 1.45;
  .news-container--description
    padding: 0 29px 27px;
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap
  .news-container--description-tags
    flex 1 1 65%
    max-width 65%
    margin-bottom 14px

    ul
      display flex
      flex-direction row
      flex-wrap wrap
      height 17px
      text-overflow ellipsis
      white-space: nowrap;
      overflow hidden
      li
        color: rgba(27, 27, 27, 0.5);
        font-size .875em
        margin-right 15px

  .news-container--description-eye
    flex 1 1 232px
    //max-width 232px
    max-width: 100%;
    ul
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content space-between
      li
        color #1b1b1b
        opacity 1
        font-size .875em
        opacity .5
        font-weight 700
        span
          &:first-child
            margin-right 20px
          &:last-child
            font-weight 400
