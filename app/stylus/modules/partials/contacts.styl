.contact-phones
  padding 35px 0 10px
  a
    color $black-text

.team-container
  height 381px
  margin-bottom 30px
  position relative
  overflow hidden
  cursor pointer
  &:hover
    .team-container--description
      transform none
  &--image
    overflow hidden
    display flex
    justify-content center
    align-items center
    img
      height 100%
  &--description
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, .4)
    display flex
    flex-direction column
    justify-content flex-end
    transform translateY(-100%)
    transitions()
    ul
      display flex
      justify-content center
      margin-bottom 50px
      li
        margin 0 10px
        a
          background $yellow
          border-radius 50%
          width: 40px;
          height: 40px;
          display block
          padding 11px 0
          text-align center
          color $black
          &:hover
            background $black
            color $white
    h3
      text-align center
      margin-bottom 50px

#map
  width 100%
  height 420px
  +portrait()
    height 400px
  //margin 30px 0

.tab-map
  position absolute
  top 0
  left auto
  width 100%
  height auto
  z-index 50
  right -100vw
  opacity 0
  transitions()
  +portrait()
    position static
    margin-bottom 30px


.tab-map.open
  right 0
  opacity 1

#tab-change
  display block
  text-transform uppercase
  font-weight 700
  .one
    display inline
  .two
    display none
  +mobile()
    display none

#tab-change.open
  .one
    display none
  .two
    display inline