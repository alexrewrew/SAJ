.search-container
  background $white
  padding 4px
  border-radius 30px
  margin-bottom 69px
  form
    display flex
    flex-direction row
    flex-wrap nowrap
    +mobile()
      flex-direction column
      flex-wrap wrap
    .select-container
      width 100%
      padding 13px 0
      position relative
      &:before
        pseudo(block, absolute)
        top 32%
        right 15px
        width 1px
        height 18px
        background $black
        z-index 100
        opacity .1
      &:nth-child(3)
        &:before
          display none
          +mobile()
            display block
      +mobile()
        &:after
          triangle($black, down, 5px)
          right 30px
          top 20px
  .button
    max-width 220px
    display block
    width 100%
    border-radius: 26px;
    +mobile()
      max-width calc(100% - 30px)
      margin-left 15px
      margin-right 15px
      margin-bottom 15px

