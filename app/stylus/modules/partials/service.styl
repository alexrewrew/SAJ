.service
  background $gray-back

.service-container
  background $white
  display block
  margin 0 15px
  +mobile()
    margin 0
  &:focus
    outline none
  &--image
    max-height 189px
    overflow hidden
    img
      width 100%
  &--description
    padding 41px 21px
    position relative
    +portrait()
      padding-bottom 21px
    &:after
      triangle($white, up, 15px)
      top -15px
      right 34px
    h3
      color $black
    p
      font-size .875em
      position relative
      max-height 45px
      overflow hidden
      &:after
        pseudo(block, absolute)
        bottom 0
        left 0
        right 0
        background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 90%);
        height 50px

    .button
      background $trans
      border-color $gray-back3
      color $black-text

.services-page
  padding-top 194px

.services-page--container
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  border-top 1px solid #dbdbdb
  padding-top 30px
  .service-container
    max-width: 300px
    margin 0 0 31px
