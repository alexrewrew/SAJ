#job
  background #fff

  .affix-panel
    background #f9f9f9
    form
      input
        background $white
        border-color #e2e2e2
      .button
        background $yellow
        &:hover
          background $white

.job-article

  h2
    margin-bottom 20px
  p
    margin-bottom 40px
    font-size 1.125rem
  h3
    color $black
    margin-bottom 40px
  ul
    margin-left 15px

    li
      font-size 1.125rem
      margin-bottom 28px
  &--section
    border-top 1px solid #e2e2e2
    padding-top 46px
    padding-bottom 20px





.job-official
  margin-top 50px
  background: url(../img/jobs/job-back.png) no-repeat 20% $yellow;
  +custom-min(1600px)
    background: url(../img/jobs/job-back.png) no-repeat 35% $yellow;
  h2
    color $white
