.university
  height 694px
  overflow-y hidden
  position relative
  transitions()
  &:after
    pseudo(block, absolute)
    bottom 0
    left 0
    right 0
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 90%);
    height 142px
    transitions()

.university.open
  height 845px
  +mobile()
    height 2234px
  &:after
    visibility hidden
    opacity 0

.university-container
  position relative
  display flex
  justify-content center
  align-items center
  overflow hidden
  padding 26px 20px
  height 280px
  margin-bottom 21px
  &--description
    position absolute
    z-index 2
    left 20px
    right 20px
    top auto
    bottom 14px
    transitions()
    p
      color $white
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis
  &--image
    filter brightness(60%)
    transitions()
  &:hover
    .university-container--description
      transform translateY(-20px)
    .university-container--image
      filter brightness(50%)

.university-container.small
  height 251px


