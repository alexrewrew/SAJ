@import '../../utilities/vars'
@import '../../utilities/mixins'

.pagination
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content center
  align-items center
  margin-bottom 30px
  &-left
    a
      background $trans
      text-align center
      border-radius: 26px;
      border: solid 1px #e2e2e2;
      width 71px
      color #e2e2e2
      padding 15px 0
      display block
  &-right
    a
      background $trans
      text-align center
      border-radius: 26px;
      border: solid 1px #e2e2e2;
      width 71px
      color #e2e2e2
      padding 15px 0
      display block
  li
    margin 0 10px
    a
      display block
      font-weight: bold;
      line-height: 1.55;
      letter-spacing: 0.4px;
      color: rgba(0, 0, 0, 0.5);
      &:hover
        color inherit
  .active
    a
      color $black-text