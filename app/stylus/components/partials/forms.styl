@import '../../utilities/vars'
@import '../../utilities/mixins'

form {
}

input
  -webkit-appearance none
  transitions()
  &:focus
    outline none
  +placeholder()
    color #2d2d2d

textarea
  -webkit-appearance none
  resize none
  &:focus
    outline none
  +placeholder()
    color #2d2d2d

label {
}

.affix-panel
  form
    padding 105px 83px 10px
    +mobile()
      padding 55px 15px 10px
    +portrait()
      padding: 85px 100px 70px;
    +tablet()
      padding: 105px 50px 10px;
    input
      background transparent
      margin: 10px 0;
      max-width 289px
      width 100%
      color $white
      border-radius: 30px;
      border: solid 1px $white
      padding 19px 30px
      &:focus
        border-color $blue
    select
      width 100%
      border-radius: 30px;
      border: solid 1px $white
      padding 19px 30px
      margin 10px 0
    .select-container
      position relative
      display block
      max-width: 289px;
      &:after
        triangle($black, down, 5px)
        top 45%
        right 30px
    .button
      background $white
      max-width: 289px;
      margin 10px 0 30px
      padding 19px 0
      border-radius: 30px;

.form-contact-mail
  display flex
  justify-content space-between
  flex-wrap wrap
  margin-bottom 60px
  .spacer
    width 100%
    height 60px
  input
    border 1px solid #e2e2e2
    height: 52px;
    border-radius: 26px;
    padding 0 28px
    margin 20px 0
    max-width 47%
    flex 1 1 47%
    +mobile()
      flex 1 1 100%
      max-width 100%
  textarea
    height: 136px;
    border-radius: 26px;
    border: solid 1px #e2e2e2;
    padding 21px 28px
    margin 20px 0
    max-width 100%
    width 100%
  button
    max-width 320px
    height: 52px;
    border-radius: 26px;
    margin 20px 0
    &:focus
      outline none

.form-contact-address
  display flex
  justify-content space-between
  flex-wrap wrap
  margin-bottom 60px
  .input-small
    flex 1 1 30%
    max-width 30%
    +mobile()
      flex 1 1 100%
      max-width 100%
  input
    flex 1 1 64%
    max-width 64%
    +mobile()
      flex 1 1 100%
      max-width 100%

.radiobutton
  position relative
  margin 20px 0
  flex 1 1 100%
  max-width 100%
  input[type='radio']
    position absolute
    opacity 0
    margin 0
  input[type='radio'] + label
    position relative
    padding-left 54px
    cursor pointer
    font-weight 700
    &:before
      pseudo(block, absolute)
      top -3px
      left 0
      width 24px
      height 24px
      border 1px solid $gray
      opacity 1
      border-radius 50%
      transitions()
    &:after
      pseudo(block, absolute)
      top -3px
      left 0
      width 24px
      height 24px
      background $yellow
      border 1px solid $yellow
      opacity 0
      border-radius 50%
      transitions()

  input[type='radio']:checked + label
    &:before
      opacity 0
    &:after
      opacity 1

.question-mark
  position absolute
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background-color: #ffcc00;
  cursor pointer
  right 0
  top 0
  +mobile()
    display none
  &:hover
    .answer-mark
      display block
  span
    display block
    text-align center
    padding-top 2px
  .answer-mark
    background $white
    padding 19px 21px 21px
    position absolute
    min-width 300px
    top 30px
    left -8px
    display none
    &:before
      triangle($white, up, 10px)
      top -10px
      left 10px
    p
      font-size: 14px;
      line-height: 1.57;
      text-align: left;
      color: rgba(27, 27, 27, 0.5);
      margin-bottom 0

.upload-group
  display flex
  flex-direction row
  flex 1 1 100%
  max-width 100%
  margin-bottom 60px
  position relative
  +mobile()
    justify-content space-between
  .question-mark
    right 20%
    top 20px

.uploadbutton.uploaded
  input[type='file'] + label
    border-color $green
    color $green
    .fa-camera
      display none
    .fa-check
      display block
  p
    color $green
    span:first-child
      display none
    span:last-child
      display inline
  &:hover
    p
      color $green
    input[type='file'] + label
      border-color $green
      color $green



.uploadbutton
  position relative
  margin 20px 0
  flex 1 1 25%
  max-width 25%
  margin-right 40px
  +mobile()
    margin-right 0
    flex 1 1 40%
    max-width 40%
  &:hover
    p
      color $black
  p
    font-size: .875em !important
    font-weight: 600;
    text-align: left;
    color: rgba(45, 45, 45, 0.5);
    text-align center
    display block
    margin-bottom 10px !important
    transitions()
    span:last-child
      display none
  input[type='file']
    position absolute
    opacity 0
    margin 0
  input[type='file'] + label
    cursor pointer
    display flex
    align-items center
    justify-content center
    width: 86px;
    height: 86px;
    background-color: $trans;
    border: solid 1px #e2e2e2;
    border-radius 50%
    font-size 30px
    color #e2e2e2
    margin 10px auto
    position relative
    transitions()
    .fa
      position absolute
    .fa-check
      display none
    &:hover
      color $black-text
      border-color $black-text


#step1
  width 100%